<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h2>Edit movie</h2>
            <hr>


            <form action="/movies/:id/edit" method="POST">
                <div class="mb-3">
                    <label class="white-text mb-3" for="title" class="form-label">Title:</label>
                    <input type="text" class="form-control" id="title" name="title" required="required"
                        value="{{movie.title}}">
                </div>

                <div class="mb-3">
                    <label class="white-text mb-3" for="genre" class="form-label">Genre:</label>
                    <input type="text" class="form-control" id="genre" name="genre" required="required"
                        value="{{movie.genre}}">
                </div>

                <div class="mb-3">
                    <label class="white-text mb-3" for="plot" class="form-label">Plot:</label>
                    <input type="text" class="form-control" id="plot" name="plot" required="required"
                        value="{{movie.plot}}">
                </div>

                <div>
                    <input type="hidden" name="movie_id" value="{{movie.id}}">
                </div>

                <div class="mb-3">
                    <label class="white-text mb-3" for="cast" class="form-label">Select Cast:</label>

                    <div class="mb-3">
                        <select class="form-select" name="cast" id="cast" multiple required="required">
                            <option disabled>Seleccionar cast...</option>


                            {{#each data as |celebrity|}}

                            <option value={{celebrity.id}}>
                                {{celebrity.name}}
                            </option>

                            {{/each}}


                        </select>
                    </div>
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Update movie</button>
                </div>

            </form>
        </div>
    </div>
</div>