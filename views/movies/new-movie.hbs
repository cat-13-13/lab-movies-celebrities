<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h2>Create a new movie</h2>
            <hr>

            <form action="/movies/create" method="POST">
                <div class="mb-3">
                    <label class="white-text mb-3" for="title" class="form-label">Title:</label>
                    <input type="text" class="form-control" id="title" name="title" required="required">
                </div>

                <div class="mb-3">
                    <label class="white-text mb-3" for="genre" class="form-label">Genre:</label>
                    <input type="text" class="form-control" id="genre" name="genre" required="required">
                </div>

                <div class="mb-3">
                    <label class="white-text mb-3" for="plot" class="form-label">Plot:</label>
                    <input type="text" class="form-control" id="plot" name="plot" required="required">
                </div>

                <div class="mb-3">
                    <label class="white-text mb-3" for="cast" class="form-label">Cast:</label>

                    <div class="mb-3">
                        <select class="form-select form-select-lg" name="cast" id="cast" multiple>
                            <option disabled>Seleccionar cast...</option>

                            {{#each data}}
                            <option value={{id}}>{{name}}</option>

                            {{/each}}

                        </select>
                    </div>
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Create new movie</button>
                </div>

            </form>
        </div>
    </div>
</div>